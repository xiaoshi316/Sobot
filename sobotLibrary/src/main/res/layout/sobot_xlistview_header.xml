<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom" >

    <RelativeLayout
        android:id="@+id/sobot_xlistview_header_content"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sobot_xlistview_layout_width_60" >

        <LinearLayout
            android:id="@+id/sobot_xlistview_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/sobot_xlistview_header_hint_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sobot_xlistview_header_hint_normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sobot_xlistview_layout_width_3" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sobot_xlistview_header_last_time"
                    android:textSize="@dimen/sobot_xlistview_ts_layout_width_12" />

                <TextView
                    android:id="@+id/sobot_xlistview_header_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sobot_xlistview_ts_layout_width_12" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/sobot_xlistview_header_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/sobot_xlistview_header_text"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sobot_xlistview_layout_width_35"
            android:contentDescription="@null"
            android:src="@drawable/sobot_xlistview_arrow" />

        <ProgressBar
            android:id="@+id/sobot_xlistview_header_progressbar"
            android:layout_width="@dimen/sobot_xlistview_layout_width_30"
            android:layout_height="@dimen/sobot_xlistview_layout_width_30"
            android:layout_alignLeft="@id/sobot_xlistview_header_text"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sobot_xlistview_layout_width_40"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>